[core]
  editor = vim -f
  quotepath = false
  excludesfile = ~/.gitignore

[user]
  name = Gosha Arinich
  email = me@goshakkk.name

[github]
  user = goshakkk

[color]
  ui = auto
  interactive = auto

[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  st = status
  s = status -s
  ci = commit --all
  ca = commit --all --amend
  di = diff
  dc = diff --cached
  co = checkout
  cb = checkout -b
  br = branch --verbose
  forget = rm --cached
  undo = reset HEAD~1 --mixed

[push]
  default = current

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
