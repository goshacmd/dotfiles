# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsSpread true

# Monitor aliases
alias mon-laptop      1440x900
alias mon-thunderbolt 2560x1440

alias lap-chat move screenOriginX;screenOriginY screenSizeX/2;screenSizeY ${mon-laptop}
alias lap-social move screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY ${mon-laptop}
alias lap-full move screenOriginX;screenOriginY screenSizeX;screenSizeY ${mon-laptop}

alias tbolt-full move screenOriginX;screenOriginY screenSizeX;screenSizeY ${mon-thunderbolt}
alias tbolt-kinda-full move screenOriginX;screenOriginY 5*screenSizeX/6;screenSizeY ${mon-thunderbolt}
alias tbolt-l move screenOriginX;screenOriginY 5*screenSizeX/12;screenSizeY ${mon-thunderbolt}
alias tbolt-r move screenOriginX+5*screenSizeX/12;screenOriginY 5*screenSizeX/12;screenSizeY ${mon-thunderbolt}
alias tbolt-social-t move screenOriginX+5*screenSizeX/6;screenOriginY screenSizeX/6;screenSizeY/2 ${mon-thunderbolt}
alias tbolt-social-b move screenOriginX+5*screenSizeX/6;screenOriginY+screenSizeY/2 screenSizeX/6;screenSizeY/2 ${mon-thunderbolt}
alias tbolt-chat move screenOriginX;screenOriginY screenSizeX/6;screenSizeY ${mon-thunderbolt}

# 1 monitor layout (laptop only)
layout laptop 'Safari' ${lap-full}
layout laptop 'iTerm' ${lap-full}
layout laptop 'iTunes' ${lap-full}
layout laptop 'Messages' ${lap-chat}
layout laptop 'Skype' ${lap-chat}
layout laptop 'Tweetbot' ${lap-social}
layout laptop 'Wedge' ${lap-social}
layout laptop 'Xcode' ${lap-full}
layout laptop 'Sparrow' ${lap-full}
layout laptop 'Google Chrome' ${lap-full}

# 1 monitor layout (Thunderbolt Display only)
layout thunderbolt 'Safari' ${tbolt-l}
layout thunderbolt 'iTerm' ${tbolt-r}
layout thunderbolt 'Tweetbot' ${tbolt-social-t}
layout thunderbolt 'Wedge' ${tbolt-social-b}
layout thunderbolt 'Messages' ${tbolt-chat}
layout thunderbolt 'Xcode' ${tbolt-kinda-full}

# 2 monitor layout
# TODO

# Default layouts
default laptop      resolutions:${mon-laptop}
default thunderbolt resolutions:${mon-thunderbolt}
default 2monitor    resolutions:${mon-laptop};${mon-thunderbolt}

bind l:ctrl;cmd layout laptop
bind t:ctrl;cmd layout thunderbolt

# Resize bindings
bind right:alt      resize +10% +0
bind  left:alt      resize -10% +0
bind    up:alt      resize +0   -10%
bind  down:alt      resize +0   +10%
bind right:ctrl;alt resize -10% +0 bottom-right
bind  left:ctrl;alt resize +10% +0 bottom-right
bind    up:ctrl;alt resize +0   +10% bottom-right
bind  down:ctrl;alt resize +0   -10% bottom-right

# Push bindings
alias pushkeys ctrl;cmd
bind     /:${pushkeys} move screenSizeX/4;0  screenSizeX/4*2;screenSizeY # center
bind     n:${pushkeys} move screenSizeX/8;0  screenSizeX/8*6;screenSizeY # normal
bind     h:${pushkeys} move screenSizeX/-4;0 screenSizeX*2;screenSizeY   # huge
bind     r:${pushkeys} move 0;0 screenSizeX;screenSizeY # full-screen
bind right:${pushkeys} push right bar-resize:screenSizeX/3
bind  left:${pushkeys} push left  bar-resize:screenSizeX/3
bind  down:${pushkeys} push down  bar-resize:screenSizeY/2
bind    up:${pushkeys} push up    bar-resize:screenSizeY/2

# Nudge bindings
alias nudgekeys ctrl;alt;cmd
bind right:${nudgekeys} nudge +5% +0
bind  left:${nudgekeys} nudge -5% +0
bind  down:${nudgekeys} nudge +0  +5%
bind    up:${nudgekeys} nudge +0  -5%

# Focus bindings
alias focuskeys ctrl;shift;alt;cmd
bind s:${focuskeys} focus 'Safari'
bind t:${focuskeys} focus 'iTerm'
bind i:${focuskeys} focus 'iTunes'
bind x:${focuskeys} focus 'Xcode'
bind m:${focuskeys} focus 'Messages'
bind t:${focuskeys} focus 'Tweetbot'
bind w:${focuskeys} focus 'Wedge'
bind p:${focuskeys} focus 'Sparrow'
bind c:${focuskeys} focus 'Google Chrome'
bind f:${focuskeys} focus 'Finder'

# Window hints
bind esc:cmd hint

# Grid
bind esc:ctrl grid
